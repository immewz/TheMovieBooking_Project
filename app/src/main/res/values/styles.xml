<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="shapeAppearanceOverlay">@style/DialogShape</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBody</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogNegativeButton</item>
    </style>

    <style name="DialogShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="DialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/text_regular_3x</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DialogBody" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogPositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="DialogNegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="fontFamily">@font/dmsans_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
    </style>

    <style name="TabLayoutFoodTextStyle">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
    </style>




</resources>