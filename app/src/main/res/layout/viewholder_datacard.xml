<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_medium_2_18">

    <RelativeLayout
        android:id="@+id/rlDateCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/date_card">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Tomorrow"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_medium_3"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_below="@id/tvDayOfWeek"
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="May"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_card_medium"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_below="@id/tvMonth"
            android:id="@+id/tvDayOfMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_regular"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_small"/>



    </RelativeLayout>


</FrameLayout>