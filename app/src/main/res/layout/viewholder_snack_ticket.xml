<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingVertical="@dimen/margin_small">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_delete_snack"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_medium_3"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_toEndOf="@id/btnDelete"
        android:id="@+id/tvSnackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dmsans_medium"
        android:text="Potato Chips"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/colorTextSeat"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_centerVertical="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_toEndOf="@id/tvSnackName"
        android:id="@+id/tvSnackCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dmsans_medium"
        android:text="(Qt. 2)"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/colorTextSeat"
        android:layout_centerVertical="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSnackPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dmsans_medium"
        android:text="1000Ks"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/colorTextSeat"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>


</RelativeLayout>